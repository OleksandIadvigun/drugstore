<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd
      http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.2.xsd">

    <changeSet author="VZ" id="1">
        <createTable tableName="product">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(50)"/>
            <column name="quantity" type="INT"/>
            <column name="price" type="Decimal(11,1)"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="VZ">
        <insert tableName="Product">
            <column name="id" value="1"/>
            <column name="name" value="paracetamol"/>
            <column name="quantity" value="100"/>
            <column name="price" value="10.5"/>
        </insert>
        <insert tableName="Product">
            <column name="id" value="2"/>
            <column name="name" value="aspirin"/>
            <column name="quantity" value="20"/>
            <column name="price" value="5.7"/>
        </insert>
        <insert tableName="Product">
            <column name="id" value="3"/>
            <column name="name" value="decatylen"/>
            <column name="quantity" value="45"/>
            <column name="price" value="2.1"/>
        </insert>
    </changeSet>

    <changeSet author="VZ" id="3">
        <createTable tableName="order">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="total" type="Decimal(11,1)"/>
        </createTable>
    </changeSet>

    <changeSet author="VZ" id="4">
        <createTable tableName="order_details">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="order_id" type="BIGINT">
                <constraints foreignKeyName="fk_order_id" references="order(id)"/>
            </column>
            <column name="product_id" type="BIGINT">
                <constraints foreignKeyName="fk_product_id" references="product(id)"/>
            </column>
            <column name="quantity" type="INT"/>
        </createTable>
    </changeSet>

    <changeSet id="5" author="VZ">
        <insert tableName="order">
            <column name="id" value="1"/>
            <column name="total" value="31.5"/>
        </insert>
        <insert tableName="order">
            <column name="id" value="2"/>
            <column name="total" value="11.4"/>
        </insert>
    </changeSet>

    <changeSet id="6" author="VZ">
        <insert tableName="order_details">
            <column name="id" value="1"/>
            <column name="order_id" value="1"/>
            <column name="product_id" value="1"/>
            <column name="quantity" value="3"/>
        </insert>
        <insert tableName="order_details">
            <column name="id" value="2"/>
            <column name="order_id" value="2"/>
            <column name="product_id" value="2"/>
            <column name="quantity" value="2"/>
        </insert>
    </changeSet>

</databaseChangeLog>
